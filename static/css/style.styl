@import('nib');
@import url('http://fonts.googleapis.com/css?family=Open+Sans:300,400,400italic,600,700');

.open-sans
  font-family 'Open Sans', sans-serif

html,
body
  width 100%
  height 100%
  @extends .open-sans

.container
  position relative
  width 480px
  max-width 90%
  margin 0 auto

.page
  width 100%

  &.page-gray
    background #F2F2F2

.spacer-10
  height 10px
.spacer-20
  height 20px
.spacer-40
  height 40px
.spacer-60
  height 60px
.spacer-80
  height 80px
.spacer-100
  height 100px

.pure-g [class *="pure-u"]
  @extends .open-sans
  img
    max-width 100%

.text-left
  text-align left
.text-center
  text-align center
.text-right
  text-align right

h1
  @extends .open-sans
  color #333
  font-weight 600
  font-size 15px
  letter-spacing 1px
  text-transform uppercase
  margin 2px 0

h2
  @extends .open-sans
  color #666
  font-weight 300
  font-size 13px
  letter-spacing 1px
  margin 2px 0

hr
  border none
  border-top 2px dotted #EEE

p
  font-size 14px
  color #333
  font-weight 400
  margin 2px 0

  &.date
    font-size 11px
    font-weight 600
    letter-spacing 1px
    color #BBB

  b,
  strong
    font-weight 400
    color #333

  a
    display inline-block
    color #000
    font-weight 400
    text-decoration none
    border-bottom 2px solid rgba(#000, 0.1)
    line-height 22px
    transition border-color 0.4s ease
    &:hover
      border-bottom 2px solid rgba(#000, 0.4)

img.coral-logo
  width 80px
  height auto

.player
  width 80px
  height 80px
  cursor pointer
  position relative
  margin auto
  transition opacity 0.4s ease

  &:hover
    opacity 0.8

  & > img
    width 100%
    height 100%
    border-radius 37px

  .player-mask
    position absolute
    z-index 10
    top 0
    left 0
    width 100%
    height 100%
    .play,
    .pause
      position absolute
      top 50%
      left 50%
      margin-top -16px
      margin-left -16px
      transition opacity 0.3s ease, transform 0.4s ease

      opacity 0
      transform scale(0.6, 0.6)

      &.visible
        opacity 1
        transform scale(1, 1)
